<UserControl x:Class="TestProjectWPF.TaskUserController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="520"
             xmlns:vm="clr-namespace:TestProject.ViewModel;assembly=TestProject" 
             d:DataContext="{d:DesignInstance Type=vm:TaskViewModel}">
    
    <Border Padding="12" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Название:" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="0,0,8,6" Text="{Binding Name}"/>

            <TextBlock Grid.Row="1" Text="Описание:" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Top"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,8,6" Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

            <TextBlock Grid.Row="2" Text="Дата:" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,0,8,6" SelectedDate="{Binding Date}"/>

            <TextBlock Grid.Row="3" Text="Статус:" FontWeight="SemiBold" Margin="0,0,8,6" VerticalAlignment="Center"/>
            <CheckBox Grid.Row="3" Grid.Column="1" Margin="0,0,8,6" Content="Выполнено" IsChecked="{Binding IsCompleted}"/>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="110" Height="32" Margin="0,6,8,0" Content="Принять" Command="{Binding SaveChangeCommand}"/>
                <Button Width="110" Height="32" Margin="0,6,0,0" Content="Отмена" Command="{Binding DiscardChangeCommand}"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="110" Height="32" Margin="0,6,0,0" Content="Удалить" Command="{Binding DeleteCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
